{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "target": "es5",
    "jsx": "react",
    "baseUrl": ".",
    "lib": [ "dom", "es2015", "es2016", "es2017" ],
    "paths": {
      "app/*": ["src/*"],
      "static/*": [ "static/*" ]
    }
  },
  "include": [
    "./src/**/*",
    "./types/*"
  ],
  "exclude": [
    "**/*/__tests__"
  ]
}